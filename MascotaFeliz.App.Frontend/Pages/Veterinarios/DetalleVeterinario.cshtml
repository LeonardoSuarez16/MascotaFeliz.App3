@page
@model MascotaFeliz.App.Frontend.Pages.DetalleVeterinarioModel
@{
}

<section class="block-form">
<div class="header-form">
    <img src="~/images/datos-veterinario.png" alt="">
</div>
<div class="container-form">
<form method="get" >
    <table style="margin-left: 40px;">
        <tr><td colspan="2" style="">
            <h1 style="font-size: 1.5rem;" >
                @Model.VeterinarioEncontrado.Nombres @Model.VeterinarioEncontrado.Apellidos
            </h1>
            </td>
        </tr>
        <tr> <td style="font-weight: 700;">Código: </td><td style="padding-left: 15px;">@Model.VeterinarioEncontrado.Id</td></tr>
        <tr> <td style="font-weight: 700;">Direccion: </td><td style="padding-left: 15px;">@Model.VeterinarioEncontrado.Direccion</td> </tr>
        <tr> <td style="font-weight: 700;">Telefono: </td><td style="padding-left: 15px;">@Model.VeterinarioEncontrado.Telefono</td> </tr>    
        <tr> <td style="font-weight: 700;">T. Profesional: </td><td style="padding-left: 15px;">@Model.VeterinarioEncontrado.TarjetaProfesional</td> </tr>
    </table>
    <div style="margin-top: 1rem; text-align:center">
        <input type="hidden" name="Id" value=@Model.VeterinarioEncontrado.Id>
        <button class="main-button" asp-area="" asp-page="/Veterinarios/ActualizarVeterinarios">Actualizar</button>
    </div>
</form>
</div>
</section>
<section>
    <table class="table table-striped mt-5">
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>COLOR</th>
            <th>ESPECIE</th>
            <th>RAZA</th>
            <th>DUEÑO</th>
            <th>DETALLES</th>
        </tr>
        @foreach (var mascota in Model.ListaMascota){
            <tr>
                <td>@mascota.Id</td>
                <td>@mascota.Nombres</td>
                <td>@mascota.Color</td>
                <td>@mascota.Especie</td>
                <td>@mascota.Raza</td>
                <td>@mascota.Dueno.Nombres @mascota.Dueno.Apellidos</td>
                <td>
                    <form class="form-rowTables" action="" method="get">
                        <input type="hidden" name="CajitaIdMascota" value="@mascota.Id">
                        <button class="detail-button" asp-area="" asp-page="/Mascotas/DetalleMascota">
                            + Info
                        </button>     
                    </form>               
                </td>
            </tr>
        }
    </table>
</section>
